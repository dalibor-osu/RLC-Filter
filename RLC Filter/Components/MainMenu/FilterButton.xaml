<UserControl x:Class="RLC_Filter.Components.MainMenu.FilterButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RLC_Filter.Components.MainMenu"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Height="200" Width="200"
             Background="Transparent"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Border Background="Gray">
        <Button x:Name="FilterBtn" Click="FilterButton_OnClick">
            <TextBlock x:Name="FilterBtnText" HorizontalAlignment="Center" VerticalAlignment="Center" Loaded="OnLoad"/>
        </Button>
    </Border>
</UserControl>
